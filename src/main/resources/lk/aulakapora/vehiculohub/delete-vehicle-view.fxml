<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.aulakapora.vehiculohub.HelloApplication">
    <children>
        <Text fill="#ef0404" layoutX="168.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Delete Vehicle" textAlignment="CENTER" wrappingWidth="171.7366943359375">
            <font>
                <Font name="System Bold" size="23.0" />
            </font>
        </Text>
        <!-- TextField for Vehicle ID input -->
        <TextField fx:id="vehicleIdText" layoutX="117.5" layoutY="120.0" prefHeight="30.0" prefWidth="285.0" promptText="Enter ID to delete"
                   style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
        </TextField>
        <!-- Delete Button -->
        <Button fx:id="deleteButton" layoutX="117.5" layoutY="170.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Delete"
                style="-fx-background-color: #28a745; -fx-background-radius: 15; -fx-font-size: 14px; -fx-font-weight: bold;" >
        </Button>
        <!-- Close Button -->
        <Button fx:id="closeButton" layoutX="302.5" layoutY="170.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Close"
                style="-fx-background-color: #dc3545; -fx-background-radius: 15; -fx-font-size: 14px; -fx-font-weight: bold;" >
        </Button>
    </children>
</AnchorPane>
