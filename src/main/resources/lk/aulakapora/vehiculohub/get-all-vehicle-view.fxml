<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.aulakapora.vehiculohub.HelloApplication"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f7f7f7; -fx-padding: 20px;">

    <children>
        <!-- Title -->
        <Label text="View All Vehicles" layoutX="200.0" layoutY="10.0"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- TableView for Vehicle Data -->
        <TableView fx:id="vehicleTable" layoutX="25.0" layoutY="60.0" prefHeight="300.0" prefWidth="550.0" style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="65.0"/>
                <TableColumn text="Brand" fx:id="colBrand" prefWidth="75.0"/>
                <TableColumn text="Model" fx:id="colModel" prefWidth="75.0"/>
                <TableColumn text="Engine Capacity" fx:id="colEngineCapacity" prefWidth="100.0"/>
                <TableColumn text="Transmission Mode" fx:id="colTransmissionMode" prefWidth="100.0"/>
                <TableColumn text="Qty" fx:id="colQty" prefWidth="60.0"/>
                <TableColumn text="Price" fx:id="colPrice" prefWidth="75.0"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
