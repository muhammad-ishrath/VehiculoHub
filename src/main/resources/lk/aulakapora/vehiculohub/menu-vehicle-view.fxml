<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.aulakapora.vehiculohub.controller.MenuVehicleController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;">
    <!-- Improved Title Text -->
    <Text fill="#2e86c1" layoutX="100.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="VehiculoHUB Admin Dashboard"
          wrappingWidth="400.0" textAlignment="CENTER">
        <font>
            <Font name="Arial Bold" size="28.0" />
        </font>
        <effect>
            <DropShadow color="#333333" radius="4.0" offsetX="2.0" offsetY="2.0" />
        </effect>
    </Text>

    <!-- Create Vehicle Button -->
    <Button layoutX="100.0" layoutY="120.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Create Vehicle"
            style="-fx-background-color: #28a745; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" onAction="#openCreateVehicleWindow">
        <effect>
            <DropShadow color="#1e7e34" radius="5.0" offsetX="0.0" offsetY="3.0" />
        </effect>
    </Button>

    <!-- View All Vehicles Button -->
    <Button layoutX="320.0" layoutY="120.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="View All Vehicles"
            style="-fx-background-color: #17a2b8; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" onAction="#openViewAllVehicleWindow">
        <effect>
            <DropShadow color="#138496" radius="5.0" offsetX="0.0" offsetY="3.0" />
        </effect>
    </Button>

    <!-- Update Vehicle Button -->
    <Button layoutX="100.0" layoutY="200.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Update Vehicle"
            style="-fx-background-color: #ffc107; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" onAction="#openUpdateVehicleWindow">
        <effect>
            <DropShadow color="#d39e00" radius="5.0" offsetX="0.0" offsetY="3.0" />
        </effect>
    </Button>

    <!-- Delete Vehicle Button -->
    <Button layoutX="320.0" layoutY="200.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Delete Vehicle"
            style="-fx-background-color: #dc3545; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" onAction="#openDeleteVehicleWindow">
        <effect>
            <DropShadow color="#bd2130" radius="5.0" offsetX="0.0" offsetY="3.0" />
        </effect>
    </Button>



    <!-- Close Button  -->
    <Button layoutX="250.0" layoutY="280.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Close"
            style="-fx-background-color: #6c757d; -fx-background-radius: 25; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" onAction="#closeApplication">
        <effect>
            <DropShadow color="#5a6268" radius="5.0" offsetX="0.0" offsetY="3.0" />
        </effect>
    </Button>
</AnchorPane>
