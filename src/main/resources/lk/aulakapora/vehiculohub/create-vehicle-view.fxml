<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.aulakapora.vehiculohub.controller.CreateVehicleController" style="-fx-background-color: #f0f0f0;">
    <children>
        <!-- Title Text Styling -->
        <Text fill="#333333" fontSmoothingType="LCD" layoutX="170.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create Vehicle" wrappingWidth="200.0" style="-fx-font-family: 'Arial'; -fx-font-size: 24px; -fx-font-weight: bold;">
        </Text>
        <!-- Brand TextField with modern styling -->
        <TextField fx:id="brandText" layoutX="145.0" layoutY="95.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the car Brand:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Model TextField with modern styling -->
        <TextField fx:id="modelText" layoutX="145.0" layoutY="143.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the car Model:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Engine Capacity TextField with modern styling -->
        <TextField fx:id="ecapacityText" layoutX="145.0" layoutY="191.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the car Engine Capacity:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Transmission Mode TextField with modern styling -->
        <TextField fx:id="tmodeText" layoutX="145.0" layoutY="239.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the car Transmission Mode:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Quantity TextField with modern styling -->
        <TextField fx:id="qtyText" layoutX="145.0" layoutY="287.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the Quantity:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Price TextField with modern styling -->
        <TextField fx:id="priceText" layoutX="145.0" layoutY="335.0" prefHeight="30.0" prefWidth="250.0" promptText="Enter the Price:" style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="0" offsetY="2" color="#cfcfcf"/>
            </effect>
        </TextField>
        <!-- Create Button with modern green styling -->
        <Button id="createbutton" layoutX="145.0" layoutY="400.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Create" textFill="white" style="-fx-background-color: #28a745; -fx-background-radius: 15; -fx-font-size: 14px; -fx-font-weight: bold;" onAction="#addVehicle">
            <effect>
                <DropShadow radius="4" offsetX="0" offsetY="2" color="#28a745"/>
            </effect>
        </Button>
        <!-- Exit Button with modern red styling -->
        <Button id="exitbutton" layoutX="295.0" layoutY="400.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Exit" textFill="white" style="-fx-background-color: #dc3545; -fx-background-radius: 15; -fx-font-size: 14px; -fx-font-weight: bold;" onAction="#exitbutton">
            <effect>
                <DropShadow radius="4" offsetX="0" offsetY="2" color="#dc3545"/>
            </effect>
        </Button>
    </children>
</AnchorPane>
