<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.aulakapora.vehiculohub.HelloApplication"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Title: Update Vehicle -->
    <Text fill="#2e86c1" layoutX="200.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Update Vehicle" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Text>

    <!-- TextField for Vehicle ID with Search Button -->
    <TextField fx:id="vehicleIdText" layoutX="100.0" layoutY="100.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter Vehicle ID to Update"
               style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white;">
    </TextField>
    <Button fx:id="searchButton" layoutX="420.0" layoutY="100.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Search"
            style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-font-weight: bold;" />

    <!-- TextFields for Brand, Model, Engine Capacity, Transmission Mode -->
    <TextField fx:id="brandText" layoutX="100.0" layoutY="150.0" prefHeight="30.0" prefWidth="420.0" promptText="Brand"
               style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white;" />
    <TextField fx:id="modelText" layoutX="100.0" layoutY="200.0" prefHeight="30.0" prefWidth="420.0" promptText="Model"
               style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white;" />
    <TextField fx:id="engineCapacityText" layoutX="100.0" layoutY="250.0" prefHeight="30.0" prefWidth="420.0" promptText="Engine Capacity"
               style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white;" />
    <TextField fx:id="transmissionModeText" layoutX="100.0" layoutY="300.0" prefHeight="30.0" prefWidth="420.0" promptText="Transmission Mode"
               style="-fx-border-color: #00bfff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: white;" />

    <!-- Update and Close Buttons -->
    <Button fx:id="updateButton" layoutX="100.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Update"
            style="-fx-background-color: #28a745; -fx-background-radius: 15; -fx-font-weight: bold;"  />
    <Button fx:id="closeButton" layoutX="420.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Close"
            style="-fx-background-color: #dc3545; -fx-background-radius: 15; -fx-font-weight: bold;"  />

</AnchorPane>
